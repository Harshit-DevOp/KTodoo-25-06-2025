<odoo>
<odoo>
    <record id="view_tally_connector_form" model="ir.ui.view">
        <field name="name">tally.connector.form</field>
        <field name="model">tally.connector</field>
        <field name="arch" type="xml">
            <form string="Tally Connector">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                        <field name="tally_url"/>
                        <field name="default_journal"/>
                        <field name="state" readonly="1"/>
                    </group>
                    <footer>
                        <button name="action_connect" string="Connect" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
</odoo>
